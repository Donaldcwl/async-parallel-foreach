{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "esnext"
    ],
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": false,
    "outDir": "dist/lib",
    "declaration": true,
    "declarationDir": "dist/types",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["node_modules"]
}